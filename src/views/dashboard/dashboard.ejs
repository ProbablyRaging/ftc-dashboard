<%- include('../partials/header') -%>

<div class="content-page-title">
    <p class="content-page-header">Welcome back, <%= username %>
    </p>

    <div class="stat-content-box">
        <div class="content-box-div">
            <p class="metric-title">ForTheContent Server <i>(live)</i></p>
            <div class="stat-content-box-content">
                <i class="fa-solid fa-circle online"></i>
                <p class="stat-title-online">Online</p>
                <p class="member-count">
                    <%= onlineMembers %>
                </p>
            </div>
            <div class="stat-content-box-content">
                <i class="fa-solid fa-circle offline"></i>
                <p class="stat-title-offline">Offline</p>
                <p class="member-count">
                    <%= totalMembers %>
                </p>
            </div>
        </div>

        <div class="server-stats">
            <div class="sub-stats">
                <p class="count-title">Text Channels:</p>
                <p class="stat-counts">
                    <%= text_channel_count %>
                </p>
            </div>
            <div class="sub-stats">
                <p class="count-title">Voice Channels:</p>
                <p class="stat-counts">
                    <%= voice_channel_count %>
                </p>
            </div>
            <div class="sub-stats">
                <p class="count-title">Categories:</p>
                <p class="stat-counts">
                    <%= category_count %>
                </p>
            </div>
            <div class="sub-stats">
                <p class="count-title">Roles:</p>
                <p class="stat-counts">
                    <%= role_count %>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="alert alert-primary alert-dismissible fade show" role="alert">
    <i class="fa-solid fa-bell"></i> The light/dark mode switch has been moved to the user settings menu in the bottom left
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<!-- Content Box -->
<div class="content-box">
    <div class="content-box-div">

        <!-- Content Box Inner -->
        <header class="content-box-title-class" id="box-two">
            <div class="content-box-title-flex">
                <h5 class="content-box-title-decor">
                    <div class="content-box-title">Staff Applications</div>
                </h5>
            </div>
            <button class="fa-solid fa-angle-up" id="dash-collapse-two" name="collapse"></button>
        </header>

        <hr class="content-box-separator" id="separator-two">

        <div>
            <div class="content-box-content" id="content-two">
                <!-- Dashboard Button -->
                <div class="content-box-button" onclick="location.href = '/applications';">
                    <h5 class="button-title">Applications</h5>
                    <div class="button-description">View new and old staff applications</div>
                </div>
            </div>
        </div>
        <!--  -->
    </div>
</div>
